@using EntityLayer.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />

<br />
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <style>
        #personel {
            border-collapse: collapse;
            width: 100%;
        }

            #personel td, #personel th {
                border: 1px solid #ddd;
                padding: 8px;
            }

            #personel tr:nth-child(even) {
                background-color: #f2f2f2;
            }

            #personel tr:hover {
                background-color: #2ecc71;
                color: #fff;
            }

            #personel th {
                padding-top: 12px;
                padding-bottom: 12px;
                text-align: left;
                background-color: #2c3e50;
                color: white;
            }
    </style>
</head>

<body>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:100,300" rel="stylesheet">
    <table id="personel">
        <tr>
            <th>#</th>
            <th>Category Name</th>
            <th>Description</th>
            <th>Delete</th>
            <th>Update</th>
            <th>Heading</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryID </td>
                <td>@item.CategoryName</td>
                <td>@item.CategoryDescription</td>
                <td><a href="/AdminCategory/DeleteCategory/@item.CategoryID" class="btn btn-danger">Delete</a></td>
                <td><a href="/AdminCategory/EditCategory/@item.CategoryID" class="btn btn-warning">Update</a></td>
                <td><a href="#" class="btn btn-primary">Heading</a></td>
            </tr>
        }

    </table>
    <br />
    <a href="/AdminCategory/AddCategory" class="btn btn-info">New Category</a>
</body>
</html>

